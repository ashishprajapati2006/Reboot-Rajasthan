	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>This app needs location access to tag the exact location of civic issues.</string>
	
	<!-- Motion/Sensor Permission -->
	<key>NSMotionUsageDescription</key>
	<string>This app needs motion sensor access to verify authentic photo captures and prevent fraud.</string>
	
