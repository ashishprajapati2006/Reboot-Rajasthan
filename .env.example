# ================================
# SAAF SURKSHA - Environment Configuration
# ================================

# ================================
# Database Configuration
# ================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=saaf_surksha
DB_USER=postgres
DB_PASSWORD=postgres123

# ================================
# Redis Configuration
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# RabbitMQ Configuration
# ================================
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# ================================
# JWT Secrets
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ================================
# Application Configuration
# ================================
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ================================
# Twilio (SMS/OTP)
# ================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# SendGrid (Email)
# ================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@saafsurksha.in

# ================================
# OpenAI API (RTI Generation)
# ================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ================================
# Google Cloud APIs
# ================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# ================================
# Twitter API (Social Escalation)
# ================================
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# ================================
# AWS S3 (File Storage)
# ================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=saaf-surksha-uploads
AWS_S3_REGION=ap-south-1
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ================================
# Service URLs (Internal)
# ================================
AUTH_SERVICE_URL=http://auth-service:3001
DETECTION_SERVICE_URL=http://detection-service:3002
TASK_SERVICE_URL=http://task-service:3003
GEOFENCE_SERVICE_URL=http://geofence-service:3004
RTI_SERVICE_URL=http://rti-service:3005
ANALYTICS_SERVICE_URL=http://analytics-service:3006

# ================================
# Kong API Gateway
# ================================
KONG_PG_HOST=kong-database
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong123
KONG_PG_DATABASE=kong
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_PROXY_LISTEN=0.0.0.0:8000

# ================================
# Monitoring & Logging
# ================================
LOG_LEVEL=debug
SENTRY_DSN=

# ================================
# Geofence Configuration
# ================================
DEFAULT_GEOFENCE_RADIUS=50
MAX_GEOFENCE_RADIUS=1000

# ================================
# AI/ML Model Configuration
# ================================
YOLO_MODEL_VERSION=yolov8n
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# File Upload Limits
# ================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# ================================
# Worker App Configuration
# ================================
MAX_DAILY_TASKS_PER_WORKER=50
TASK_TIMEOUT_HOURS=24
GEOFENCE_CHECK_INTERVAL_SECONDS=30

# ================================
# Community Voting Configuration
# ================================
VOTING_RADIUS_METERS=1000
MIN_VOTES_FOR_VERIFICATION=3
VOTING_PERIOD_HOURS=72

# ================================
# SLA Configuration
# ================================
SLA_CRITICAL_HOURS=4
SLA_HIGH_HOURS=12
SLA_MEDIUM_HOURS=48
SLA_LOW_HOURS=168

# ================================
# Notification Configuration
# ================================
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# ================================
# B2B API Configuration
# ================================
API_RATE_LIMIT_BASIC=1000
API_RATE_LIMIT_PREMIUM=10000
API_KEY_EXPIRY_DAYS=365
